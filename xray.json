{
  "log": { "loglevel": "info" },
  "inbounds": [
    {
      "port": 3128,
      "listen": "0.0.0.0",
      "protocol": "http",
      "settings": {
        "auth": "password",
        "accounts": [
          { "user": "myuser", "pass": "MyStrongPass123" }
        ]
      },
      "tag": "proxy-in"
    }
  ],
  "outbounds": [
    { "protocol": "freedom", "tag": "direct" },
    { "protocol": "blackhole", "tag": "drop" }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      { "type": "field", "port": "80,443", "outboundTag": "direct" },
      { "type": "field", "outboundTag": "drop" }
    ]
  }
}
