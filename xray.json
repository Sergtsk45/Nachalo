{
  "log": {
    "loglevel": "debug",
    "access": "/dev/stdout",
    "error": "/dev/stdout"
  },
  "inbounds": [
    {
      "tag": "proxy-in",
      "listen": "0.0.0.0",
      "port": 3128,
      "protocol": "http",
      "settings": {
        "auth": "password",
        "accounts": [
          { "user": "myuser", "pass": "MyStrongPass123" }
        ],
        "allowTransparent": false,
        "udp": false
      },
      "sniffing": { "enabled": false }
    }
  ],
  "outbounds": [
    { "protocol": "freedom", "tag": "direct", "settings": { "domainStrategy": "UseIP" } },
    { "protocol": "blackhole", "tag": "blocked" }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      { "type": "field", "port": "1-79,81-442,444-65535", "outboundTag": "blocked" }
    ]
  }
}
