{
  "log": {
    "loglevel": "info",
    "access": "/dev/stdout",
    "error": "/dev/stdout"
  },
  "inbounds": [
    {
      "tag": "proxy-in",
      "protocol": "http",
      "listen": "0.0.0.0",
      "port": 3128,
      "settings": {
        "auth": "password",
        "accounts": [
          { "user": "myuser", "pass": "MyStrongPass123" }
        ]
      },
      "sniffing": { "enabled": false },
      "allocate": { "strategy": "always" },
      "outboundTag": "direct"
    }
  ],
  "outbounds": [
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": { "domainStrategy": "UseIP" }
    },
    {
      "tag": "blocked",
      "protocol": "blackhole"
    }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      { "type": "field", "ip": ["geoip:private"], "outboundTag": "blocked" }
    ]
  }
}
